      // End Google Tag Manager
      header#header.clearfix
        h1#headertitle.col-xs-6
          a(href="/") Jamal Senouci
        block nav
          nav#headernav.col-sm-6
            ul.pull-right
              li
                a(ng-click="gotoHash('experience')") Experience
              li
                a(ng-click="gotoHash('projects')") Projects
      section.clearfix
          block content
      footer
          p.col-xs-12.col-sm-3 Jamal Senouci Â© 2017
          div#home
            a.col-xs-2(href='https://uk.linkedin.com/in/jamalsenouci')
            a.col-xs-4(href='https://uk.linkedin.com/in/jamalsenouci')
              img.webicon(src='public/styles/webicons/webicon-linkedin.svg' alt='linkedin logo')
            a.col-xs-4(href='https://github.com/jamalsenouci')
              img.webicon(src='public/styles/webicons/webicon-github.svg' alt='github logo')
      script(src="public/scripts/min/AnimatedScroll.js")
      script(src="https://cdnjs.cloudflare.com/ajax/libs/angular.js/1.6.5/angular.min.js")
      script(src="public/scripts/anchorScroll.js")
      script(src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha256-k2WSCIexGzOj3Euiig+TlR8gA0EmPjuc79OEeY5L45g=" crossorigin="anonymous")
