doctype html
html(ng-app="app")
    head
        meta(charset='UTF-8')
        meta(http-equiv="X-UA-Compatible" content="IE=edge")
        meta(name="viewport" content="width=device-width, initial-scale=1")
        meta(name="author" content="Jamal Senouci")
        block meta
        base(href="/my-base")
        link(rel="shortcut icon" href="../favicon.ico")
        link(rel="stylesheet" href="public/styles/main.css" type="text/css")
        link(href="//fonts.googleapis.com/css?family=Open+Sans:300|Open+Sans+Condensed:300&amp;subset=latin,latin-ext&amp;anp;v2" rel="stylesheet" 
        type="text/css")
        link(href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.7.1/css/bootstrap-datepicker.css" rel="stylesheet" type="text/css")

        style.
          #scrollArea {
            height: 280px;
            overflow: auto;
          }

          #bottom {
            display: block;
            margin-top: 2000px;
          }
    body(ng-controller="ScrollController")
